package hello;
import java.util.Scanner;/*scanner类在java.util包中*/
public class asdsa {

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		final double PI = 3.14159;
		Scanner input=new Scanner(System.in);/*创建一个scanner类型的对象，这句话的意思是创建一个scanner对象，并且将特德引用值赋值给变量input*/
		System.out.println("Enter a radius for :");
		double radius =input.nextDouble();/*调用nextDouble方法来读取一个double值*/
		double area = radius * radius * PI;
		System.out.println("The area for the circle of radius " + radius + " is " + area);
	}

}
